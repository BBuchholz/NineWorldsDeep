<UserControl x:Class="NineWorldsDeep.Tapestry.NodeUI.FileDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NineWorldsDeep.Tapestry.NodeUI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="MultiLineTextBox"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 Height="Auto"
                 Margin="5"
                 HorizontalContentAlignment="Center"/>

        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox x:Name="TagStringTextBox"                 
                     Grid.Row="0"
                     Margin="10, 2, 10, 4"
                     KeyUp="TagStringTextBox_KeyUp"/>
            <Button Grid.Row="1"
                    x:Name="UpdateButton"
                    Margin="10, 2"
                    IsEnabled="False"
                    Click="UpdateButton_Click">Update</Button>
            <Button Grid.Row="2"
                    Margin="10, 2"
                    Click="OpenExternallyButton_Click">Open Externally</Button>

        </Grid>
        
    </Grid>
</UserControl>
