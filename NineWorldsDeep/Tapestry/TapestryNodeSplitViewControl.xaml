<UserControl x:Class="NineWorldsDeep.Tapestry.TapestryNodeSplitViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NineWorldsDeep.Tapestry"
             mc:Ignorable="d" 
             d:DesignHeight="600" 
             d:DesignWidth="800"
             KeyDown="UserControl_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:TapestryNodeViewControl x:Name="leftNodeView" 
                                       Grid.Column="0"/>
        <local:TapestryNodeViewControl x:Name="rightNodeView" 
                                       Grid.Column="1"/>
    </Grid>
</UserControl>
