<Window x:Class="NineWorldsDeep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NineWorldsDeep"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Testing">
                <MenuItem Header="Reflection"
                          Click="MenuItem_Click"/>
                <MenuItem Header="Reflection2"
                          Click="MenuItem2_Click"/>
            </MenuItem>
            <MenuItem Header="Windows">
                <MenuItem Header="ListViewDetail"
                          Click="MenuItemListViewDetail_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <ListView x:Name="lvMain"/>
        </Grid>
    </DockPanel>
</Window>
