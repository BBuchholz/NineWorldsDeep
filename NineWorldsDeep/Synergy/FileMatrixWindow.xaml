<Window x:Class="NineWorldsDeep.Synergy.FileMatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NineWorldsDeep.Synergy"
        mc:Ignorable="d"
        Title="FileMatrixWindow" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" x:Name="mainMenu" IsMainMenu="True"/>
        <local:StoryboardStatusBar x:Name="statusBar" 
                                       DockPanel.Dock="Bottom"/>
        <Grid>
            <DataGrid x:Name="dataGrid"/>
        </Grid>
    </DockPanel>
</Window>
