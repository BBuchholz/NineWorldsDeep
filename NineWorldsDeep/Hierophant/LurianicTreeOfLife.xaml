                 Canvas.Left="150" 
                 Canvas.Top="350"
                 Panel.ZIndex="1" 
                 Width="50" 
                 Height="50" 
                 MouseLeftButtonDown="Sephirah_MouseLeftButtonDown"/>

                <Ellipse x:Name="elMalkuth"
                 Fill="White"
                 Stroke="Black"
                 StrokeThickness="1"
                 Canvas.Left="150" 
                 Canvas.Top="450"
                 Panel.ZIndex="1" 
                 Width="50" 
                 Height="50" 
                 MouseLeftButtonDown="Sephirah_MouseLeftButtonDown"/>
