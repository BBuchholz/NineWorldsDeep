<UserControl x:Class="NineWorldsDeep.Hierophant.SemanticGridPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NineWorldsDeep.Hierophant"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="dgrid"
                  AutoGenerateColumns="False"
                  Grid.ColumnSpan="4"
                  Margin="5">
            
            <DataGrid.Columns>
            
                <DataGridTextColumn Binding="{Binding Key}"
                                    IsReadOnly="True"/>
            
            </DataGrid.Columns>
            
        </DataGrid>

        <TextBox x:Name="txtAddSemanticKey"
                 Grid.Column="0"
                 Grid.Row="1"
                 Margin="5"/>

        <Button x:Name="btnAddSemanticKey"
                Grid.Column="1"
                Grid.Row="1"
                Margin="5"
                Content="Add Key"
                Click="btnAddSemanticKey_Click"/>


        <TextBox x:Name="txtAddColumn"
                 Grid.Column="2"
                 Grid.Row="1"
                 Margin="5"/>

        <Button x:Name="btnAddColumn"
                Grid.Column="3"
                Grid.Row="1"
                Margin="5"
                Content="Add Column"
                Click="btnAddColumn_Click"/>

    </Grid>
</UserControl>
