<UserControl x:Class="NineWorldsDeep.Hierophant.SemanticMatrix"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NineWorldsDeep.Hierophant"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <TabControl x:Name="tcSemanticSets" 
                    TabStripPlacement="Right">
            <TabItem Header="SemanticSet">
                <local:SemanticGrid x:Name="sgrid1"/>
            </TabItem>
            <TabItem Header="Add Or Remove">
                <local:SemanticGrid x:Name="sgrid2"/>
            </TabItem>
            <TabItem Header="Programmatically">
                <local:SemanticGrid x:Name="sgrid3"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
